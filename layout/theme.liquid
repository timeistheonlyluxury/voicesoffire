<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <title>{{ shop.name }}</title>

    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    <link rel="preconnect" href="https://monorail-edge.shopifysvc.com">

    <link rel="stylesheet" href="{{ 'style.css' | asset_url }}">

    {%- if settings.favicon != blank -%}
      <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
    {%- endif -%}

    {% render 'gcm-integration-script' %}

    {% render 'social-meta-tags' %}

    {{ content_for_header }}
  </head>

  <body>
    <div id="loading">
      <div class="progress-text">LOADING <span id="progress">0</span>%</div>
    </div>

    <div id="ios-permission" style="display: none;">
      <video id="button-glow-video" muted loop playsinline autoplay></video>
      <button id="enable-gyro">
        <span class="button-text-mobile">ARE YOU READY?</span
        ><span
          class="button-text-desktop"
          >ARE YOU READY?</span
        >
      </button>
    </div>

    <canvas id="canvas"></canvas>

    <video id="fallback-video" muted loop playsinline></video>

    <audio id="background-audio" loop></audio>

    <div id="gradient-overlay"></div>

    <div class="footer-social">
      <div class="footer-icons-container">
        <a href="https://www.instagram.com/voicesoffire" target="_blank" rel="noopener" aria-label="Instagram">
          <img src="{{ 'vof_instagram.png' | asset_img_url: '40x40' }}" alt="Instagram" width="20" height="20">
        </a>
        <a href="https://www.tiktok.com/@voicesoffireofficial" target="_blank" rel="noopener" aria-label="TikTok">
          <img src="{{ 'vof_tiktok.png' | asset_img_url: '40x40' }}" alt="TikTok" width="20" height="20">
        </a>
        <a href="https://www.facebook.com/VoicesofFire/" target="_blank" rel="noopener" aria-label="Facebook">
          <img src="{{ 'vof_facebook.png' | asset_img_url: '40x40' }}" alt="Facebook" width="20" height="20">
        </a>
        <a href="https://x.com/voicesoffire" target="_blank" rel="noopener" aria-label="X">
          <img src="{{ 'vof_x.png' | asset_img_url: '40x40' }}" alt="X" width="20" height="20">
        </a>
        <a
          href="https://music.apple.com/us/artist/voices-of-fire/1551392002"
          target="_blank"
          rel="noopener"
          aria-label="Apple Music"
        >
          <img src="{{ 'vof_apple.png' | asset_img_url: '40x40' }}" alt="Apple Music" width="20" height="20">
        </a>
        <a
          href="https://open.spotify.com/artist/5hMr1UPWUlLzQmHpE45EpH"
          target="_blank"
          rel="noopener"
          aria-label="Spotify"
        >
          <img src="{{ 'vof_spotify.png' | asset_img_url: '40x40' }}" alt="Spotify" width="20" height="20">
        </a>
        <a href="https://music.amazon.com/artists/B08VF9LF1L" target="_blank" rel="noopener" aria-label="Amazon Music">
          <img src="{{ 'vof_amazon.png' | asset_img_url: '40x40' }}" alt="Amazon Music" width="20" height="20">
        </a>
      </div>
    </div>

    <div class="footer">
      <a href="/pages/help">Help</a>
      <a href="/pages/terms">Terms</a>
      <a href="/pages/privacy">Privacy</a>
      <a href="/pages/privacy-requests">Do Not Sell Or Share My Personal Information</a>
      <a href="/pages/accessibility">Accessibility</a>
    </div>

    <div class="footer-center">
      <div id="countdown-timer"></div>
      <button class="signup-trigger" id="signup-trigger">Sign Up For Updates</button>
    </div>

    <!-- Email Signup Modal -->
    <div id="signup-modal" class="modal" style="display: none;">
      <div class="modal-content">
        <button class="modal-close" id="modal-close">&times;</button>
        <div id="modal-success" style="display: none;">
          <h2>Thank You!</h2>
          <p>You've been added to the Voices Of Fire updates list.</p>
        </div>
        <div id="modal-form">
          <h2>
            Sign up to the Voices of Fire network.<br>
            Your ID is free. Your presence is precious.
          </h2>
          <form id="signup-form">
            <input type="email" id="email-input" placeholder="E-Mail" required>
            <button type="submit" id="submit-btn">SIGN UP</button>
            <p id="error-message" class="error-message" style="display: none;"></p>
          </form>
        </div>
      </div>
    </div>

    {{ content_for_layout }}

    <script src="{{ 'config.js' | asset_url }}"></script>
    <script src="{{ 'app.js' | asset_url }}"></script>

    {% render 'kla-integration-script' %}
  </body>
</html>
