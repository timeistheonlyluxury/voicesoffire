{% if login_types.size > 0 %}
<div class="{% if max_width == 'true' %}page-width{% endif %}">
    <div class='single-login-container'>
        {% for login_type in login_types %}
            <div class='single-login-option'>
                {% if login_type == 'CUSTOMER' %}
                    {% section 'single-default-login-button' %}
                {% elsif login_type == 'WALLET' %}
                    {% section 'single-wallet-login-button' %}
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>
{% endif %}