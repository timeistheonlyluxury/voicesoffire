<div class="single-grid-item single-access-denied">
  <h1>{{ 'single.content_expired.title' | t}}</h1>
  <a href="{{ routes.account_logout_url }}"
     class="btn">{{ 'single.content_expired.log_out' | t}} ({{ customer.email }})</a>
  <h4>{{ 'single.content_expired.help_header' | t}}</h4>
  <p><a href="FAQ_LINK">{{ 'single.content_expired.faq' | t}}</a></p>
</div>
<script>
  $('a[href^="{{ routes.account_logout_url }}"]').on("click", function() {
    $.ajax( $(this).attr('href') )
      .done(function() {
        window.location.href = "{{ request.path }}";
    });
    return false;
  });
</script>

