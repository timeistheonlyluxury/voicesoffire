<style>
  .page-body {
    max-width: 800px;
    margin: 40px auto;
    padding: 0 16px;
    font-family: 'Times New Roman', Times, serif;
    line-height: 1.5;
    font-size: 15px;
    color: #e1e5ec;
    background-color: #000;
  }
  .content-container {
    width: 100%;
  }
  .page-body a {
    color: #7cabfd;
  }
  .page-body h1,
  .page-body h2 {
    font-weight: 600;
  }
  .page-body h1 {
    text-align: center;
    font-size: 26px;
    text-transform: uppercase;
    margin-bottom: 4px;
  }
  .page-body .last-modified {
    text-align: center;
    font-size: 13px;
    margin-top: 0;
    margin-bottom: 24px;
  }
  .page-body h2 {
    margin-top: 28px;
    font-size: 17px;
  }
  .page-body p {
    margin: 10px 0;
  }
  .page-body ul {
    margin: 8px 0 8px 20px;
    padding: 0;
  }
  .page-body li {
    margin: 4px 0;
  }
  .page-body table {
    width: 100%;
    border-collapse: collapse;
    margin: 16px 0;
    font-size: 14px;
  }
  .page-body th,
  .page-body td {
    border: 1px solid #ddd;
    padding: 8px 10px;
    vertical-align: top;
    text-align: left;
  }
  .page-body th {
    background: #f5f5f5;
    font-weight: 600;
    color: #000;
  }
</style>

<div class="page-body">
  <h1>{{ page.title }}</h1>
  <div class="content-container">
    {{ page.content }}
  </div>
</div>

{%- schema -%}
{
  "name": "Main Page"
}
{%- endschema -%}
