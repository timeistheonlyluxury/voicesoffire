{% assign ticket_promo = true %}

<div class="single-grid-item single-access-denied">
  <h1>{{ 'single.no_ticket.title' | t}}</h1>
  <p>{{ 'single.no_ticket.subtext_1' | t}}</p>
  <p>{{ 'single.no_ticket.subtext_2' | t}}</p>
  <a href="{{ routes.account_logout_url }}"
     class="btn button">{{ 'single.no_ticket.log_out' | t}} ({{ customer.email }})</a>
  <h4>{{ 'single.no_ticket.help_header' | t}}</h4>
  <p><a href="FAQ_LINK" target="_blank">{{ 'single.no_ticket.faq' | t}}</a></p>
</div>
<script>
  $('a[href^="{{ routes.account_logout_url }}"]').on("click", function() {
    $.ajax( $(this).attr('href') )
      .done(function() {
        window.location.href = "{{ request.path }}";
    });
    return false;
  });
</script>

{% if ticket_promo %}
  {% include 'single-ticket-promo' %}
{% endif %}


