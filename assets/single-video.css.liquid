.page-width {
  max-width: var(--page-width, 1200px);
  margin: 0 auto;
}

.single-access-denied {
  padding-top: 3em;
  padding-bottom: 3em;
  text-align: center;
}

/** Video Player - Proxy **/
.single-video-wrap,
.video-overlay-wrapper {
  background: black;
}

.single-video-player.chat-disabled {
  aspect-ratio: 16/9 !important;
}

.single-video-player {
  aspect-ratio: 20/9;
  background: black;
  max-height: 75vh;
  margin: 0 auto;
  width: 100%;

  @media screen and (max-width: 1200px) {
    aspect-ratio: 21.25/9;
  }

  @media screen and (max-width: 990px) {
    aspect-ratio: 6/9;
    max-height: 100%;
  }
}

/** Video Player - App Blocks **/
.page-width .single-video-player,
.has-max-width .single-video-player {
  aspect-ratio: 21.25/9;
  background: black;
  width: 100%;

  @media screen and (max-width: 1090px) {
    aspect-ratio: 1/1;
  }

  @media screen and (max-width: 990px) {
    aspect-ratio: 6/9;
  }
}

.shopify-app-block .single-video-player {
  max-height: 100% !important;
}

/** Video Info **/
.single-video-info {
  margin-bottom: 3rem;
}

.single-video-header {
  display: flex;
  align-items: center;
  margin-top: 2em;
}

.single-go-back {
  display: none;
  cursor: pointer;
}

.single-video-share {
  display: flex;
  margin-left: auto;
  align-items: center;
  position: relative;
  cursor: pointer;
}

.single-video-share svg {
  display: block;
  margin-right: 8px;
}

.single-video-share .single-share-tooltip {
  visibility: hidden;
  font-size: 14px;
  background-color: #555;
  color: #fff;
  text-align: center;
  border-radius: 8px;
  padding: 3px 5px;
  position: absolute;
  z-index: 1;
  right: -67px;
  opacity: 0;
  transition: opacity .3s ease;
}

.single-video-share .single-share-tooltip.show {
  visibility: visible;
  opacity: 1;
}

.single-video-title-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between
}

.single-video-title {
  margin: 0.5em 0 0 0;
}

.single-video-artist {
  margin: 1em 0 0;
  opacity: 0.5;
}

.single-video-description-wrapper {
  overflow: hidden;
  transition: max-height 0.3s ease;
  margin-top: 1em;
  max-height: 15em; /* Show ~2 paragraphs by default */
}

.single-video-description-wrapper.expanded {
  max-height: fit-content;
}

.single-video-toggle-description {
  background: none;
  border: none;
  color: inherit;
  cursor: pointer;
  text-decoration: underline;
  font: inherit;
  padding: 0;
  margin-top: 0.5em;
}

/** Promoted Products **/
.single-collection {
  margin: 2em auto;
  justify-content: center;
}

.single-collection-product {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  margin-bottom: 2em;
  padding: 1em;
  gap: 0;
}

.single-collection-product-link,
.single-collection-product-form {
  width: 100%;
}

.single-collection-product-link {
  flex-grow: 1;
}

.single-collection-product-img-wrap {
  width: 100%;
  aspect-ratio: 1;
  overflow: hidden;
  margin-bottom: 1em;
}

.single-collection-product-img {
  width: 100%;
  aspect-ratio: 1;
  object-fit: contain;
  transition: transform 0.2s linear 0s;
}

.single-collection-product-img:hover {
  transform: scale(1.05);
  transition: transform 0.2s linear 0s;
}

.single-collection-product-price {
  margin: 0 0 1em;
}

.single-collection-add-to-cart {
  width: 100%;
}
