.box {
  width: 40%;
  margin: 0 auto;
  background: rgba(255, 255, 255, 0.2);
  padding: 35px;
  border: 2px solid #fff;
  border-radius: 20px/50px;
  background-clip: padding-box;
  text-align: center;
}

.pulogin {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(4px);
  transition: opacity 500ms;
  z-index: 2147483647;
  display: flex;
  align-items: center;
}

.popup {
  margin: 0 auto;
  padding: 0.5em;
  border-radius: 8px;
  border: 1px solid #333;
  width: 95%;
  max-width: 500px;
  position: relative;
  transition: all 5s ease-in-out;
  box-shadow: 0 1px 1px hsl(0deg 0% 0% / 8%), 0 2px 2px hsl(0deg 0% 0% / 8%),
    0 4px 4px hsl(0deg 0% 0% / 8%), 0 8px 8px hsl(0deg 0% 0% / 8%), 0 16px 16px hsl(0deg 0% 0% / 8%);
}

.popup .close {
  position: absolute;
  top: 2%;
  right: 2%;
  transition: all 0.2s;
  font-size: 26px;
  text-decoration: none;
  color: #000;
  background: none;
  border: none;
}

.popup .content {
  max-height: 30%;
  overflow: auto;
}

@media screen and (max-width: 700px) {
  .box {
    width: 70%;
  }
  .popup .single-login {
    padding: 1em;
  }
}
