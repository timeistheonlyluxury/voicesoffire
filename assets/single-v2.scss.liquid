/* Icons */
@import url("//fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined");

/** Resets **/
*:focus {
  outline: 0;
}

/** Mixins **/
$tablet-break: 842px;
$mobile-break: 670px;

/** Layout **/
.single-grid {
  max-width: calc(100vw - 40px);
  margin: 0 auto;
  padding-top: 15px;
  padding-bottom: 30px;
  box-sizing: border-box;
}
.single-grid-item {
  margin: 0 auto 2em;
  max-width: 1092px;
}
.single-grid:after,
.single-grid-item:after {
  clear: both;
  content: "";
  display: block;
}
.single-col {
  float: left;
  box-sizing: border-box;
  @media screen and (max-width: $mobile-break) {
    float: none !important;
    width: 100% !important;
    padding-left: 0;
  }
  &.single-col-3 {
    width: 25%;
  }
  &.single-col-4 {
    width: 40%;
  }
  &.single-col-8 {
    width: 60%;
  }
  &.single-col-9 {
    width: 75%;
  }
  &.single-col-12 {
    width: 100%;
  }
}

.single-align-center {
  margin: 0 auto;
  align-self: center;
}

.hidden {
  display: none !important;
}

/** Text **/
a {
  color: inherit;
  text-decoration: none;
  cursor: pointer;
}

.text-center {
  text-align: center;
}

/** Album Pages **/

// Left Column
.single-album-art {
  margin-bottom: 26px;
  img {
    max-width: 100%;
    height: auto;
  }
  @media screen and (max-width: $mobile-break) {
    float: none !important;
    width: 100% !important;
    padding: 0;
  }
}
.single-album-release-date {
  font-weight: bold;
  font-size: 0.9em;
  margin-bottom: 15px;
  display: block;
}
.single-album-description {
  font-size: 0.9em;
  &.mobile-desc {
    display: none;
  }
  @media screen and (max-width: $tablet-break) {
    &.desktop-desc {
      display: none;
    }
    &.mobile-desc {
      display: block;
    }
  }
  @media screen and (max-width: $mobile-break) {
    float: none !important;
    width: 100% !important;
    padding: 0;
  }
}
.single-share-menu {
  margin-bottom: 2em;
  .single-share-link {
    display: inline-block;
    margin-right: 0.25em;
  }
}
// Right Column
.single-col-r {
  padding-left: 30px;
  @media screen and (max-width: $tablet-break) {
    &.single-col-8 {
      width: 100%;
      float: none;
      padding: 0;
    }
  }
}
.single-album-header {
  box-sizing: border-box;
  h1.single-album-title {
    margin: 0 0 5px;
  }
  p.single-album-artist {
    font-size: 90%;
    font-style: italic;
  }
  @media screen and (max-width: $tablet-break) {
    float: left;
    width: 60%;
    padding-left: 2em;
  }
  @media screen and (max-width: $mobile-break) {
    float: none !important;
    width: 100% !important;
    padding-left: 0;
  }
}
.single-album-price {
  margin-bottom: 1.5em;
  display: block;
  font-weight: 400;
  p {
    margin: 0;
    padding: 0;
  }
  span {
    vertical-align: middle;
    display: inline-block;
    width: auto;
    i {
      display: block;
    }
  }
}
.single-album-track-play {
  cursor: pointer;
  opacity: 0.5;
}
.single-field-label {
  font-size: 0.75em;
  margin-bottom: 0.25em;
  font-weight: bold;
}
.single-select-field,
.single-album-add-to-cart .btn {
  display: block;
  width: 100%;
  margin-bottom: 10px;
}
.single-presale-note {
  font-size: 0.9em;
  margin-bottom: 15px;
}
.single-ajaxified-cart-feedback i {
  vertical-align: middle;
  font-size: 1em;
}
.single-hidden {
  display: none !important;
}
// Tracklist / Audio Player
.single-tracklist {
  clear: both;
  margin-bottom: 2em;
  padding-top: 2em;
  box-sizing: border-box;
  .single-tracklist-title {
    margin-bottom: 0.25em;
  }
  .single-hr {
    margin: 4px 0;
    padding: 0;
  }
  .single-track {
    display: table;
    width: 100%;
    table-layout: fixed;
    div {
      display: table-cell;
      padding: 10px 10px 10px 0;
      box-sizing: border-box;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      &:last-of-type {
        padding-right: 0;
      }
      @media screen and (max-width: $tablet-break) {
        padding: 14px 10px 14px 0;
      }
    }
    p {
      margin: 0;
      padding: 0;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    i {
      vertical-align: middle;
      font-size: 20px;
    }
    .single-track-play {
      width: 20px;
      vertical-align: middle;
      padding-right: 0;
      line-height: 1;
      cursor: pointer;
    }
    .single-track-order {
      width: 40px;
      text-align: right;
      opacity: 0.5;
      padding-right: 10px !important;
      box-sizing: border-box;
    }
    .single-track-title {
      font-weight: bold;
      cursor: pointer;
    }
    .single-track-time {
      font-weight: normal;
      font-size: 0.8em;
      margin-left: 1em;
      opacity: 0.5;
      @media screen and (max-width: $mobile-break) {
        .single-track-time {
          display: none;
        }
      }
    }
    .single-track-artist {
      font-weight: normal;
      opacity: 0.75;
    }
    .single-track-explicit {
      width: 20px;
      text-overflow: initial !important;
      span {
        background-color: red;
        color: #fff;
        line-height: 1;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 10px;
        padding: 0 2px;
        box-sizing: border-box;
        font-family: "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif;
        display: inline !important;
      }
    }
    .single-track-price {
      width: 75px;
      text-align: right;
      @media screen and (max-width: $mobile-break) {
        .single-track-price {
          width: 60px;
        }
      }
    }
    .single-album-only {
      text-align: right;
      padding-right: 10px !important;
      box-sizing: border-box;
      opacity: 0.5;
      width: 117px;
    }
    .single-track-add-to-cart {
      text-align: center;
      width: 42px;
      cursor: pointer;
      line-height: 1;
      vertical-align: middle;
    }
  }
}

/** Livestream Pages **/
.single-login {
  padding: 60px 15px;
  box-sizing: border-box;
  text-align: center;
  h1 {
    margin-top: 0;
    padding-top: 0;
  }
  form {
    width: 100%;
    max-width: 400px;
    padding: 15px;
    box-sizing: border-box;
    margin: 0 auto;
    label {
      display: block;
      text-align: left;
      cursor: text;
    }
    input {
      width: 100%;
      padding: 10px 18px;
      margin-bottom: 10px;
    }
    .btn {
      display: block;
      width: 100%;
    }
  }
  .recover-links {
    margin-bottom: 3em;
    .divider {
      opacity: 0.5;
    }
    a:hover {
      text-decoration: underline;
    }
  }
}
.single-access-denied {
  text-align: center;
  padding: 60px 30px;
  box-sizing: border-box;
  .btn {
    margin: 15px auto 30px;
  }
}
.single-livestream {
  padding: 15px;
  box-sizing: border-box;
  @media screen and (max-width: $mobile-break) {
    padding: 0;
  }
  .single-livestream-player {
    border-radius: 8px;
    overflow: hidden;
    max-width: 1440px;
    &.chat-disabled {
      max-width: 1322px;
      margin: 0 auto;
    }
  }
}
// LiveStream Collection
.single-collection {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  text-align: center;
  .single-collection-product {
    margin-bottom: 2em;
    padding: 15px;
    box-sizing: border-box;
    flex-basis: auto;
    width: 100%;
    .single-collection-product-price {
      margin-bottom: 1em;
    }
    .single-collection-product-img {
      padding: 15px;
      box-sizing: border-box;
      max-width: 100%;
    }
    &.row-count-2 {
      width: 50%;
    }
    &.row-count-3 {
      width: 33.33%;
    }
    &.row-count-4 {
      width: 25%;
    }
    @media screen and (max-width: $tablet-break) {
      width: 50% !important;
    }
    @media screen and (max-width: $mobile-break) {
      width: 100% !important;
    }
  }
}

/** FAQ Page **/
.single-page-faq {
  padding-top: 40px;
  box-sizing: border-box;
  li {
    list-style: inherit;
    margin-left: 2em;
    margin-bottom: 0.5em;
  }
  a {
    text-decoration: underline;
  }
}

/** Animations **/
.animated {
  -webkit-animation-duration: 0.25s;
  animation-duration: 0.25s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
}
.pulse {
  -webkit-animation-name: pulse;
  animation-name: pulse;
}
@-webkit-keyframes pulse {
  from {
    -webkit-transform: scale3d(1, 1, 1);
    transform: scale3d(1, 1, 1);
  }
  50% {
    -webkit-transform: scale3d(1.25, 1.25, 1.25);
    transform: scale3d(1.25, 1.25, 1.25);
  }
  to {
    -webkit-transform: scale3d(1, 1, 1);
    transform: scale3d(1, 1, 1);
  }
}
@keyframes pulse {
  from {
    -webkit-transform: scale3d(1, 1, 1);
    transform: scale3d(1, 1, 1);
  }
  50% {
    -webkit-transform: scale3d(1.25, 1.25, 1.25);
    transform: scale3d(1.25, 1.25, 1.25);
  }
  to {
    -webkit-transform: scale3d(1, 1, 1);
    transform: scale3d(1, 1, 1);
  }
}
@-webkit-keyframes blink {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
@keyframes blink {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}

/** Theme-Specific Fixes **/
.single-grid {
  &.boundless,
  &.narrative {
    padding: 80px 0;
  }
  &.jumpstart {
    padding: 150px 0;
  }
}
// Debut (LiveStream Page)
.template-page .main-content {
  padding-top: 0;
}
